#include <stdio.h>

int main(){
	
	for(int i=1; i<=5; i++){
		
		for(int j=1; j<=5; j++){
			
			if ((i+j)==6 || i==j)  //Gözünün önünde döngüden oluşacak tabloyu canlandır.
			printf("*");
			else
			printf(" ");
			
		}
		printf("\n");
	}
	return 0;
}

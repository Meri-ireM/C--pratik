// Kullanıcı Tarafından Girilen İki Tam Sayıyı toplama işlemi için C Programı

#include <stdio.h>

int main(){
	
	int i, c, b;
	
	printf("Toplamlarini istediginiz iki sayiyi giriniz lutfen:\n ");
	scanf("%d %d", &i, &b);
	
	c= i+b;
	
	printf("Girdiginiz sayilarin toplamlari: %d",c);
	
	return 0;
	
}

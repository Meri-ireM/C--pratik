#include<stdio.h>
int main() {
	
	int sayi= 0;
	printf("Lutfen bir sayi giriniz: ");
	scanf("%d",&sayi);
	printf("Girilen sayi:%d",sayi); //! Bu satırı unutma lütfen yoksa cevap sadece rakam olur
	
return 0;
}


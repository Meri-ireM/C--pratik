#include <stdio.h> //kullanıcı -1 girene kadar devam eden döngü

int main() {
	int girilen= 0;
	int eb= 0;
	
	while(girilen != -1){
		scanf("%d", &girilen);
		if(girilen>eb)
		   eb= girilen;
	}
	
	printf("eb: %d", eb);
	
	return 0;
}


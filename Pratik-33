#include<stdio.h>
#include<stdlib.h>

int main(){
	
	int *p;
	int a= 10;
	p= &a;
	printf("%d",*p);
	*p= 20;
	printf("\n%d",a);
	
	int *q= (int*)malloc(sizeof(int)*a);  //20 tane elemanın olduğu bir dizi tanımlayacak
	q[3]= 70;   // pointer ı dizi gibi kullanıyorum
	printf("\n%d",q[3]);
	
	return 0;
	
}
Sonuc:
10
20
70

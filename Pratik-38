/* Kullanıcı Tarafından Girilen İki Tamsayının 
Bölümünü ve Kalanını Bulan program */

#include<stdio.h>

int main() {

int a, b;

printf("Iki tam sayi giriniz lutfen: ");
scanf("%d %d", &a, &b);

printf("Girdiginiz sayilarin bolumu %d, bolumlerinden kalani %d", a/b, a%b);

return 0;

}

//yıldız üçgeni
#include <stdio.h>

int main(){
	
	int i,j; 
	for(i= 1; i<= 5; i++){
		for(j=1; j<=i; j++ ){  //dıştaki döngünün değerini içteki döngüde kullanıyooruz
			printf("*");
		}
		printf("\n");
	}
	return 0;
}


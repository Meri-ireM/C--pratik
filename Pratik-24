#include <stdio.h>

int main(){
	
	for(int i=1; i<=10; i++){
		
		for(int j=1; j<=10; j++){
			if((i+j)%2==0)
			printf("*0");
			else
			printf(" ");
		}
		printf("\n");
	}
	return 0;
}
